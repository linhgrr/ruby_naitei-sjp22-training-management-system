<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" data-turbo-track="reload"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js" data-turbo-track="reload"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js" data-turbo-track="reload"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jquery-ui@1.13.2/dist/themes/ui-lightness/jquery-ui.css">
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="<%= @page_class %>">
    <%= render "layouts/header" %>
    <div class= "<%= user_signed_in? ? "app-container-wrapper" : "app-container" %>">
      <% if user_signed_in? && current_user.trainee? %>
        <%= render "trainee/base/sidebar" %>
      <% elsif user_signed_in? && current_user.admin? %>
        <%= render "admin/base/sidebar" %>
      <% elsif user_signed_in? && current_user.supervisor? %>
        <%= render "supervisor/base/sidebar" %>
      <% end %>
      <main class="main-content">
        <div class="container">
          <% flash.each do |type, message| %>
            <div class="alert alert-<%= type %>">
              <button type="button" class="close" data-dismiss="alert" aria-label="<%= t('shared.close') %>">Ã—</button>
              <%= message %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
